@model MFER.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Atualizar Endereço";
}

<div class="modal-header"> @*O header da nossa janela*@
    <h4 class="modal-title">@ViewData["Title"]</h4> @*O titulo da modal*@
    <button type="button" class="close" data-dismiss="model">
        @*Um botão para de fechar a modal (data-dismiss="model")*@
        <span aria-hidden="true">x</span><span class="sr-only">Fechar</span>
        @*Aqui é apenas o x para fechar a modal*@
    </button>
</div>

<form asp-action="AtualizarEndereco">
    @*O método de atualizar o endereço na controller*@
    <div class="modal-body"> @*Class para definir o corpo da modal*@

        <input type="hidden" asp-for="Endereco.FornecedorId" />
        <input type="hidden" asp-for="Endereco.Id" />
        @*Precisamos persistir o Id do Endereço que será atualizado
            e o Endereço de qual fornecedor
        *@

        <partial name="_Endereco" />
        @*PartialView de Endereço, o mesmo usado na criação do Fornecedor*@

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Atualizar Endereço" class="btn btn-success" />
                <input type="button" class="btn btn-info" value="Fechar" data-dismiss="modal" />
            </div>
        </div>
        @*Uma footer com o botão de Atualizar e Fechar o modal*@

    </div>
</form>
